    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>





    <style name="TreeNodeStyleCustom">
        <item name="android:paddingLeft">40dp</item>
        <!--<item name="android:showDividers">middle</item>-->
        <!--<item name="android:divider">@android:drawable/divider_horizontal_bright</item>-->
    </style>

    <style name="TreeNodeStyleDivided">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@android:drawable/divider_horizontal_bright</item>
    </style>

    <style name="EditText">
        <item name="android:textColorHint">@color/sliver</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/common_textsize_type18</item>
        <item name="android:paddingLeft">@dimen/common_margin5</item>
        <item name="android:paddingRight">@dimen/common_margin5</item>
    </style>

    <style name="EditText.Single" parent="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_edit_single_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/common_margin10</item>
    </style>

    <style name="auz_bar_style">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:background">@null</item>
        <item name="android:onClick">auzTabClicked</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dalog_share_style">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:background">@null</item>
        <item name="android:clickable">true</item>

    </style>

    <style name="about_edit_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/sliver</item>
        <item name="android:textSize">@dimen/common_textsize_type16</item>
        <!-- <item name="android:textStyle">bold</item> -->
    </style>

    <style name="common_item_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">@dimen/common_textsize_type18</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <!-- <item name="android:textStyle">bold</item> -->
    </style>

    <style name="profile_item_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/steel</item>
        <item name="android:textSize">@dimen/common_textsize_type18</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/common_margin10</item>
        <item name="android:singleLine">true</item>
        <item name="android:text">未填写</item>
    </style>

    <style name="profile_item_rlayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/common_margin20</item>
    </style>

    <style name="profile_item_image_arrow">
        <item name="android:layout_height">@dimen/common_item_icon_size</item>
        <item name="android:layout_width">@dimen/common_item_icon_size</item>
        <item name="android:layout_margin">@dimen/common_margin5</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/profile_right_arrow</item>
    </style>

    <style name="dialog_translucent" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/dialog_from_bottom_animation</item>
    </style>

    <style name="dialog_from_bottom_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_up_out</item>
        <item name="@android:windowExitAnimation">@anim/dialog_up_in</item>
    </style>

    <style name="timepopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/timepicker_anim_enter_bottom</item> <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/timepicker_anim_exit_bottom</item> <!-- 指定消失的动画xml -->
    </style>
</resources>
