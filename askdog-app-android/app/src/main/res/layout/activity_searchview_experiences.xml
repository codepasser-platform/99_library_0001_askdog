<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.askdog.android.activity.SearchExperiencesActivity">

    <com.askdog.android.view.searchview.SearchView
        android:id="@+id/experience_search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.askdog.android.view.searchview.SearchView>


    <android.support.v7.widget.CardView
        android:id="@+id/search_result_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin3"
        android:visibility="gone">

        <TextView
            android:id="@+id/serarch_result_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin5"
            android:gravity="center_vertical"
            android:padding="@dimen/common_margin5"
            android:textSize="@dimen/common_textsize_type14" />
    </android.support.v7.widget.CardView>

    <com.hellosliu.easyrecyclerview.LoadMoreRecylerView
        android:id="@+id/serarch_experience_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.hellosliu.easyrecyclerview.LoadMoreRecylerView>
</LinearLayout>
