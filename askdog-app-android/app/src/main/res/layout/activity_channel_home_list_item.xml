<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/common_margin3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/channel_home_item_picture_fl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_image_height">

            <ImageView
                android:id="@+id/channel_list_itme_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/channel_home_item_video_play"
                android:layout_width="@dimen/common_margin40"
                android:layout_height="@dimen/common_margin40"
                android:layout_gravity="center"
                android:src="@drawable/play" />

            <TextView
                android:id="@+id/channel_home_item_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="@dimen/common_margin10"
                android:layout_marginRight="@dimen/common_margin10"
                android:background="@drawable/toast_background"
                android:textColor="@color/white" />
        </FrameLayout>

        <TextView
            android:id="@+id/channel_list_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="@dimen/common_margin3"
            android:maxLines="2"
            android:textColor="@color/extra_dark_blue"
            android:textSize="@dimen/common_textsize_type18" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin3"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/channel_list_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_textsize_type14" />


                <TextView
                    android:id="@+id/channel_list_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/steel"
                    android:textSize="@dimen/common_textsize_type10" />

                <TextView
                    android:id="@+id/channel_list_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin10"
                    android:textColor="@color/steel"
                    android:textSize="@dimen/common_textsize_type10" />
            </LinearLayout>
            <!--Lineralayout 不要删除，否则点击区域会小-->
            <LinearLayout
                android:id="@+id/my_channel_delete_area_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/common_margin10"
                android:padding="@dimen/common_margin10">

                <ImageButton
                    android:id="@+id/channel_delete_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/delete_menu"
                    android:paddingLeft="@dimen/common_margin10"
                    android:paddingRight="@dimen/common_margin10" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

