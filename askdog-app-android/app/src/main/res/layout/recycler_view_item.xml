<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/common_margin3"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout android:id="@+id/item_picture_fl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_image_height">

            <ImageView
                android:id="@+id/itme_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
            <ImageView android:id="@+id/item_video_play"
                android:layout_gravity="center"
                android:layout_width="@dimen/common_margin40"
                android:layout_height="@dimen/common_margin40"
                android:src="@drawable/play"/>
            <TextView android:id="@+id/item_duration"
                android:layout_width="wrap_content"
                android:background="@drawable/toast_background"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin10"
                android:layout_marginBottom="@dimen/common_margin10"
                android:layout_gravity="bottom|right"
                android:textColor="@color/white"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="@dimen/common_margin3"
            android:maxLines="2"
            android:textColor="@color/extra_dark_blue"
            android:textSize="@dimen/common_textsize_type18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/common_textsize_type14" />


            <TextView
                android:id="@+id/item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin10"
                android:textColor="@color/steel"
                android:textSize="@dimen/common_textsize_type10" />

            <TextView
                android:id="@+id/item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin10"
                android:textColor="@color/steel"
                android:textSize="@dimen/common_textsize_type10" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

