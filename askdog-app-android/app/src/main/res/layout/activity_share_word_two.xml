<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.share.ShareWordTwoActivity">

    <include layout="@layout/common_header_navi" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin3"
        app:cardCornerRadius="@dimen/common_margin5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout android:id="@+id/share2_channel_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/common_item_text"
                    android:layout_alignParentLeft="true"
                    android:text="选择频道" />

                <TextView android:id="@+id/share2_channel_name"
                    style="@style/common_item_text"
                    android:layout_alignParentRight="true"
                    android:text="未选择" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.0dp"
                android:background="@color/snow" />

            <RelativeLayout android:id="@+id/share2_category_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/common_item_text"
                    android:layout_alignParentLeft="true"
                    android:text="选择分类" />

                <TextView android:id="@+id/share2_category_name"
                    style="@style/common_item_text"
                    android:layout_alignParentRight="true"
                    android:text="未选择" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
