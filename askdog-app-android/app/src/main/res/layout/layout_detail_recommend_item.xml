<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/detail_recommend_item_avatar"
        android:layout_width="@dimen/common_avatar_size"
        android:layout_height="@dimen/common_avatar_size"
        android:layout_margin="@dimen/common_margin5"
        android:src="@drawable/me_avatar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/datail_recommend_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_margin3"
            android:text="Joy"
            android:textColor="@color/blue"
            android:textSize="@dimen/common_textsize_type16" />

        <TextView
            android:id="@+id/datail_recommend_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joy adfafdasdfasfdaasdf"
            android:textColor="@color/steel"
            android:textSize="@dimen/common_textsize_type18" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/common_margin3">

            <TextView
                android:id="@+id/datail_recommend_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20分钟前"
                android:textColor="@color/sliver"
                android:textSize="@dimen/common_textsize_type12" />

            <TextView
                android:id="@+id/datail_recommend_item_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin10"
                android:text="回复"
                android:textColor="@color/sliver"
                android:textSize="@dimen/common_textsize_type12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_recommend_item_expand_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/common_margin3"
            android:visibility="gone">

            <TextView
                android:id="@+id/detail_recommend_item_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="展开全部"
                android:textColor="@color/blue"
                android:textSize="@dimen/common_textsize_type12" />

            <TextView
                android:id="@+id/detail_recommend_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin10"
                android:text="3条回复"
                android:textColor="@color/sliver"
                android:textSize="@dimen/common_textsize_type12" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
