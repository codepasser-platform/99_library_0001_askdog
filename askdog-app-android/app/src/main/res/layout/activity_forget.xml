<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.login.RegisterActivity">


    <include layout="@layout/bar_login"></include>


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/common_margin20"
        android:src="@drawable/ic_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            - <TextView
                style="@style/about_edit_text"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:text="@string/login_name" />

            <EditText
                android:id="@+id/forget_name_edt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:hint="手机/邮箱地址"
                android:paddingLeft="10dp"
                android:text="13998409981"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/text_color_hint_login"
                android:textSize="@dimen/common_textsize_type16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E6E6E6" />
    </LinearLayout>

    <TextView
        android:id="@+id/forget_email_err_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/forget_mail_err"
        android:textColor="@color/red"
        android:visibility="invisible" />

    <Button
        android:id="@+id/forget_send_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="@dimen/common_margin15"
        android:background="@drawable/blue_bg_btn"
        android:gravity="center"

        android:text="下一步"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/common_textsize_type16" />


</LinearLayout>


