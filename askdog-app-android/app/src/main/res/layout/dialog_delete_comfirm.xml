<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <Button
        android:id="@+id/delete_dialog_btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_margin10"
        android:background="@drawable/white_bg_radius"
        android:padding="20dp"
        android:textColor="@color/red"
        android:textSize="@dimen/common_textsize_type22" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_margin10"
        android:background="@android:color/transparent" />


    <Button
        android:id="@+id/delete_dialog_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_margin10"
        android:background="@drawable/white_bg_radius"
        android:padding="20dp"
        android:text="@string/alert_dialog_cancel"
        android:textColor="@color/blue"
        android:textSize="@dimen/common_textsize_type22" />
</LinearLayout>
