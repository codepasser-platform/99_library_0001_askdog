<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_share_height"
        android:layout_marginTop="@dimen/common_margin3"
        android:layout_marginBottom="@dimen/common_margin3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin5"
            android:text="相关分享"
            android:textColor="@color/steel"
            android:textSize="@dimen/common_textsize_type16" />

        <ImageView
            android:id="@+id/detail_share_expand"
            android:layout_width="@dimen/common_margin50"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:padding="@dimen/common_margin15"
            android:src="@drawable/icon_pull_up" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
