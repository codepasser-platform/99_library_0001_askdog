<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/result_item_height"
    android:layout_margin="@dimen/common_margin3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/result_thumbnail"
            android:layout_width="@dimen/result_item_image_width"
            android:layout_height="@dimen/result_item_image_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_margin5" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/result_item_image_height"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_margin5">

            <TextView
                android:id="@+id/result_content_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:maxHeight="@dimen/common_margin40"
                android:maxLines="2"
                android:text="自由派是自由主义者吗？翻译略有差，意义大不同"
                android:textColor="@color/extra_dark_blue"
                android:textSize="@dimen/common_textsize_type14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/result_author_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="superman"
                        android:textColor="@color/black"
                        android:textSize="@dimen/common_textsize_type10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_margin10"
                        android:layout_marginRight="@dimen/common_margin10"
                        android:text=">"
                        android:textColor="@color/slate"
                        android:textSize="@dimen/common_textsize_type10" />

                    <TextView
                        android:id="@+id/result_channel_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="天上人间"
                        android:textColor="@color/black"
                        android:textSize="@dimen/common_textsize_type10" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="@dimen/common_margin3"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/result_creation_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textColor="@color/slate"
                            android:textSize="@dimen/common_textsize_type8" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_margin10"
                            android:layout_marginRight="@dimen/common_margin10"
                            android:textColor="@color/slate"
                            android:textSize="@dimen/common_textsize_type8" />

                        <TextView
                            android:id="@+id/result_view_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/slate"
                            android:textSize="@dimen/common_textsize_type8" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/common_margin50"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/history_delete_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="@dimen/common_margin10"
                            android:background="@drawable/delete_menu"
                            android:paddingLeft="@dimen/common_margin10"
                            android:paddingRight="@dimen/common_margin10"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>