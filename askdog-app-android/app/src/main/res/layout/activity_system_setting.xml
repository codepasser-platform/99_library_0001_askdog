<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.askdog.android.activity.setting.SystemSettingActivity">

    <include layout="@layout/common_header_navi"></include>

    <android.support.v7.widget.CardView
        cardCornerRadius="@dimen/common_margin3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/setting_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="清除缓存" />

                <TextView
                    android:id="@+id/setting_cache_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/common_margin10"
                    android:gravity="center_vertical"
                    android:text="1.2M"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_color_hint_login"
                    android:textSize="@dimen/common_textsize_type16" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.0dp"
                android:background="@color/snow" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="允许非WIFI网络播放视频" />

                <CheckBox
                    android:id="@+id/setting_wifi_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/share_video_checkbox"
                    android:button="@null"
                    android:checked="true" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.0dp"
                android:background="@color/snow" />


            <RelativeLayout
                android:id="@+id/setting_about_askdog"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="关于Askdog" />

                <ImageView

                    android:layout_width="@dimen/common_item_icon_size"
                    android:layout_height="@dimen/common_item_icon_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/common_margin10"
                    android:src="@drawable/profile_right_arrow" />

            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin5"
        app:cardCornerRadius="@dimen/common_margin3">

        <TextView
            android:id="@+id/setting_exit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/common_margin10"

            android:text="退出系统"
            android:textColor="@color/black"
            android:textSize="@dimen/common_textsize_type20" />
    </android.support.v7.widget.CardView>

</LinearLayout>
