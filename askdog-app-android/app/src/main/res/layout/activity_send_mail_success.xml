<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.login.MailSendSuccessActivity">

    <LinearLayout
        android:id="@+id/navi_back_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_header_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/navi_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="@dimen/common_margin10"
            android:src="@drawable/ic_disclosure_indicator" />

        <TextView
            android:id="@+id/navi_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/common_margin10"
            android:layout_centerVertical="true"
            android:text="首页"
            android:textColor="@color/steel"
            android:textSize="@dimen/common_textsize_type20" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="#E6E6E6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/common_margin40"
            android:src="@drawable/ic_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin30"
            android:text="邮件发送成功"
            android:textColor="@color/slate"
            android:textSize="@dimen/common_textsize_type18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin10"
            android:text="重置密码邮件已经发送到您的邮箱"
            android:textColor="@color/slate"
            android:textSize="@dimen/common_textsize_type16" />

        <TextView android:id="@+id/return_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin20"
            android:text="马上登陆"
            android:textColor="@color/blue"
            android:textSize="@dimen/common_textsize_type14" />
    </LinearLayout>
</LinearLayout>

