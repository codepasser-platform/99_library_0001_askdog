<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/navi_header_height">
    <ImageView android:id="@+id/navi_back"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_disclosure_indicator"
        android:paddingRight="75dp"

        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <TextView android:id="@+id/navi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/common_margin50"
        android:layout_marginRight="@dimen/common_margin50"
        android:singleLine="true"
        android:textSize="@dimen/common_textsize_type20"
        android:textColor="@color/black"/>
    <TextView android:id="@+id/navi_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/common_margin10"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/common_margin10"
        android:textSize="@dimen/common_textsize_type16" />
</RelativeLayout>
