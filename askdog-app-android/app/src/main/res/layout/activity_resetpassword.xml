<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.login.RegisterActivity">


    <include layout="@layout/bar_login"></include>


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/common_margin20"
        android:src="@drawable/ic_title" />

    <LinearLayout
        android:id="@+id/linearLayout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_margin15"
        android:paddingRight="@dimen/common_margin15">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/common_margin10"
            android:layout_marginTop="@dimen/common_margin10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                style="@style/about_edit_text"
                android:layout_width="64sp"
                android:layout_gravity="center_vertical"
                android:text="邮箱" />

            <EditText
                android:id="@+id/setpassword_email_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:hint="请输入邮箱"
                android:maxLength="16"
                android:paddingLeft="@dimen/common_margin10"
                android:singleLine="true"
                android:textColorHint="@color/text_color_hint_login"
                android:textSize="@dimen/common_textsize_type16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#E6E6E6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_margin15"
        android:paddingRight="@dimen/common_margin15">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/common_margin10"
            android:layout_marginTop="@dimen/common_margin10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                style="@style/about_edit_text"
                android:layout_width="64sp"
                android:layout_gravity="center_vertical"
                android:text="@string/reset_new_password_text" />

            <EditText
                android:id="@+id/setpassword_one_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:hint="@string/input_passward"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingLeft="@dimen/common_margin10"
                android:singleLine="true"
                android:textColorHint="@color/text_color_hint_login"
                android:textSize="@dimen/common_textsize_type16" />

            <ImageView
                android:id="@+id/setpassword_one_clear_image"
                android:layout_width="@dimen/common_margin40"
                android:layout_height="@dimen/common_margin20"
                android:paddingLeft="@dimen/common_margin10"
                android:paddingRight="@dimen/common_margin10"
                android:src="@drawable/ic_login_clear"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/setpassword_one_show_image"
                android:layout_width="@dimen/common_margin40"
                android:layout_height="@dimen/common_margin20"
                android:paddingLeft="@dimen/common_margin10"
                android:paddingRight="@dimen/common_margin10"
                android:src="@drawable/ic_login_show_password"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#E6E6E6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_margin15"
        android:paddingRight="@dimen/common_margin15">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/common_margin10"
            android:layout_marginTop="@dimen/common_margin10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                style="@style/about_edit_text"
                android:layout_width="64sp"
                android:layout_gravity="center_vertical"
                android:text="@string/reset_re_password_text" />

            <EditText
                android:id="@+id/setpassword_two_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:hint="@string/input_passward"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingLeft="@dimen/common_margin10"
                android:singleLine="true"
                android:textColorHint="@color/text_color_hint_login"
                android:textSize="@dimen/common_textsize_type16" />

            <ImageView
                android:id="@+id/setpassword_two_clear_image"
                android:layout_width="@dimen/common_margin40"
                android:layout_height="@dimen/common_margin20"
                android:paddingLeft="@dimen/common_margin10"
                android:paddingRight="@dimen/common_margin10"
                android:src="@drawable/ic_login_clear"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/setpassword_two_show_image"
                android:layout_width="@dimen/common_margin40"
                android:layout_height="@dimen/common_margin20"
                android:paddingLeft="@dimen/common_margin10"
                android:paddingRight="@dimen/common_margin10"
                android:src="@drawable/ic_login_show_password"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#E6E6E6" />
    </LinearLayout>

    <TextView android:id="@+id/pwd_not_match"
        style="@style/about_edit_text"
        android:layout_margin="@dimen/common_margin10"
        android:text="@string/reset_password_not_match"
        android:textColor="@color/red"
        android:visibility="gone" />

    <Button
        android:id="@+id/sent_password_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_margin40"
        android:layout_margin="@dimen/common_margin10"
        android:background="@drawable/blue_bg_btn"
        android:gravity="center"
        android:text="重置密码"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/common_textsize_type18" />
</LinearLayout>